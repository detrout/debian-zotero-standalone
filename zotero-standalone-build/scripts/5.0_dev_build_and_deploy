#!/bin/bash
set -euo pipefail

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ROOT_DIR="$(dirname "$SCRIPT_DIR")"
. "$ROOT_DIR/config.sh"

CHANNEL="dev"

"$SCRIPT_DIR/check_requirements"
"$ZOTERO_BUILD_DIR/xpi/build_xpi" -c $CHANNEL -z
"$SCRIPT_DIR/build_and_deploy" -x "$ZOTERO_BUILD_DIR/xpi/build/zotero-build.xpi" -p $BUILD_PLATFORMS -c $CHANNEL -i 1
